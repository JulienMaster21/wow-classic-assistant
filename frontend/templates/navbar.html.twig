{% block navbar %}
    <header>
        <nav class="row">
            <ul class="container d-flex align-items-center col-10 nav">
                {% for page in pages %}
                    <li class="nav-item">
                        {% if app.request.pathinfo == page.path %}
                            <a class="nav-link active" href="#">
                                <div>
                                    <h3 aria-current="page">{{ page.name }}</h3>
                                </div>
                            </a>
                        {% else %}
                            <a class="nav-link" href={{ page.path }}>
                                <div>
                                    <h3>{{ page.name }}</h3>
                                </div>
                            </a>
                        {% endif %}
                    </li>
                {% endfor %}
            </ul>
            {% if app.user %}
                <ul class="container d-flex justify-content-end align-items-center col-2">
                    <li>
                        <a class="p-1" href="/profile/{{ app.user.username }}">{{ app.user.username }}</a>
                    </li>
                    <li>
                        <div class="dropdown">
                            <button type="button" class="btn dropdown-toggle" id="profileDropdownMenuButton"
                                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fas fa-user"></i>
                            </button>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="profileDropdownMenuButton">
                                <a class="dropdown-item" href="profile/{{ app.user.username }}">
                                    <i class="fas fa-user-edit"></i>
                                    My Profile
                                </a>
                                <a class="dropdown-item" href="#">
                                    <i class="fas fa-users"></i>
                                    My characters
                                </a>
                                <a class="dropdown-item" href="/logout">
                                    <i class="fas fa-sign-out-alt"></i>
                                    Logout
                                </a>
                            </div>
                        </div>
                    </li>
                </ul>
            {% else %}
                <ul class="container d-flex justify-content-end align-items-center col-2">
                    <li class="nav-item">
                        <a class="nav-link" href="/login">
                            <div>
                                <h3>Login</h3>
                            </div>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/register">
                            <div>
                                <h3>Register</h3>
                            </div>
                        </a>
                    </li>
                </ul>
            {% endif %}
        </nav>
    </header>
{% endblock navbar %}