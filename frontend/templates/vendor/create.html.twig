{% extends 'entity/create.html.twig' %}

{% block form %}
    <div class="container-fluid px-5 mb-3">
        {{ form_start(form) }}

        {{ form_row(form.name) }}
        {{ form_row(form.vendorLinkUrl) }}
        {{ form_row(form.reactionToAlliance) }}
        {{ form_row(form.reactionToHorde) }}

        {# Locations #}
        <div class="form-group">
            {{ form_label(form.locations) }}
            {{ form_errors(form.locations) }}
            {{ form_help(form.locations) }}
            <ol>
                {% for location in form.locations %}
                    <li>
                        {{ form_widget(location) }}
                        {{ form_label(location, null, { 'label_attr': { 'class': 'form-check-label' } }) }}
                    </li>
                {% endfor %}
            </ol>
        </div>

        {# Reagents #}
        <div class="form-group">
            {{ form_label(form.reagents) }}
            {{ form_errors(form.reagents) }}
            {{ form_help(form.reagents) }}
            <ol>
                {% for reagent in form.reagents %}
                    <li>
                        {{ form_widget(reagent) }}
                        {{ form_label(reagent, null, { 'label_attr': { 'class': 'form-check-label' } }) }}
                    </li>
                {% endfor %}
            </ol>
        </div>

        {{ form_end(form) }}
    </div>
{% endblock form %}